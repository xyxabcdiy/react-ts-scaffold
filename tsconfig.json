{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es2015.promise",
            "es2015.collection",
            "es5"
        ],
        "jsx": "react",
        "paths": {
            "Styles/*": [
                "./src/styles/*"
            ],
            "Medias/*": [
                "./src/medias/*"
            ],
            "Components/*": [
                "./src/components/*"
            ],
            "Utils/*": [
                "./src/utils/*"
            ],
            "Modules/*": [
                "./src/modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}